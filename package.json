    "docs": "rm -rf docs/ && typedoc --target es5 --mode file --module commonjs --excludePrivate --out docs/ src/*.ts",
    "cli": "node examples/cli.js",
    "cli:yargs": "node examples/yargs.js"
  },
  "dependencies": {
    "ansi-styles": "^3.2.0",
