{
  "name": "modern-cli",
  "description": "Library for class based modern cli scripts.",
  "author": {
    "name": "Pascal Iske",
    "email": "info@pascal-iske.de",
    "url": "https://pascal-iske.de"
  },
  "license": "MIT",
  "version": "2.0.7",
  "repository": {
    "url": "https://github.com/pascaliske/modern-cli.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/pascaliske/modern-cli/issues"
  },
  "main": "dist/index.js",
  "types": "typings/index.d.ts",
  "files": [
    "dist",
    "typings",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "watch": "yarn run build --watch",
    "docs": "rm -rf docs/ && typedoc --target es5 --mode file --module commonjs --ignoreCompilerErrors --excludePrivate --out docs/ src/*.ts",
    "test": "ava tests/*.js",
    "lint": "tslint --config tslint.json --fix src/**/*.ts",
    "format": "prettier --config .prettierrc --write src/**/*.ts"
  },
  "dependencies": {
    "ansi-styles": "^3.2.0",
    "chalk": "^2.3.0",
    "ci-info": "^1.1.2",
    "configstore": "^3.1.1",
    "convert-hrtime": "^2.0.0",
    "debug": "^3.1.0",
    "execa": "^0.9.0",
    "find-root": "^1.1.0",
    "inquirer": "^5.0.1",
    "inquirer-chalk-pipe": "^1.3.0",
    "inquirer-path": "^1.0.0-beta5",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4",
    "mz": "^2.7.0",
    "node-fetch": "^1.7.3",
    "node-notifier": "^5.2.1",
    "ora": "^1.3.0",
    "pkg-up": "^2.0.0",
    "read-pkg-up": "^3.0.0",
    "reflect-metadata": "^0.1.12",
    "typedi": "^0.6.0",
    "winston": "^2.4.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/configstore": "^2.1.1",
    "@types/inquirer": "^0.0.36",
    "@types/node": "^9.3.0",
    "@types/node-notifier": "^0.0.28",
    "@types/ora": "^1.3.1",
    "@types/winston": "^2.3.7",
    "@types/yargs": "^10.0.1",
    "ava": "^0.24.0",
    "prettier": "^1.10.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  }
}
