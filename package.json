    "inquirer": "^4.0.0",
    "inquirer-chalk-pipe": "^1.2.0",
    "inquirer-path": "^1.0.0-beta5",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4",
    "mz": "^2.7.0",
    "node-fetch": "^1.7.3",
    "node-notifier": "mikaelbr/node-notifier#master",
    "ora": "^1.3.0",
    "read-pkg-up": "^3.0.0",
    "winston": "^2.4.0",
